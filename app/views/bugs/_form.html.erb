<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <%= form_with(model: [@user, @project, @bug], local: true, html: { class: 'my-4' }) do |form| %>
        <% if @bug.errors.any? %>
          <div class="alert alert-danger" id="error_explanation">
            <h2><%= pluralize(@bug.errors.count, "error") %> prohibited this bug from being saved:</h2>
            <ul>
              <% @bug.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="mb-3">
          <%= form.label :title, class: 'form-label' %>
          <%= form.text_field :title, class: 'form-control', placeholder: 'Enter Bug Title' %>
        </div>

        <div class="mb-3">
          <%= form.label :description, class: 'form-label' %>
          <%= form.text_area :description, class: 'form-control', placeholder: 'Enter Bug Description' %>
        </div>

        <div class="mb-3">
          <%= form.label :deadline, class: 'form-label' %>
          <%= form.datetime_field :deadline, class: 'form-control' %>
        </div>

        <div class="mb-3">
          <%= form.label :bug_type, "Bug Type", class: 'form-label' %>
          <%= form.select :bug_type, Bug.bug_types.keys, {}, class: 'form-select' %>
        </div>

        <div class="mb-3">
          <%= form.label :bug_status, "Bug Status", class: 'form-label' %>
          <%= form.select :bug_status, Bug.bug_statuses.keys, {}, class: 'form-select' %>
        </div>

        <div class="mb-3">
          <%= form.label :developer_id, "Assign Developer", class: 'form-label' %>
          <%= form.select :developer_id, options_for_select(User.developer.pluck(:name, :id), @bug.developer_id), {}, class: 'form-select' %>
        </div>

        <div class="mb-3">
          <%= form.label :image, "Upload Screenshot Here", class: 'form-label' %><br>
          <%= form.file_field :image, class: 'form-control' %>
        </div>

        <div class="text-center">
          <%= form.submit 'Save Bug', class: 'btn btn-primary btn-lg' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
