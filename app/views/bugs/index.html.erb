<div class="container">
  <h1 class="mt-4">Bugs</h1>

  <%= link_to 'New Bug', new_user_project_bug_path(@user, @project), class: 'btn btn-success mt-3' %>

  <table class="table table-bordered mt-4">
    <thead class="table-dark">
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Deadline</th>
        <th>Bug Type</th>
        <th>Bug Status</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @bugs.each do |bug| %>
        <tr>
          <td><%= bug.title %></td>
          <td><%= bug.description %></td>
          <td><%= bug.deadline %></td>
          <td><%= bug.types %></td>
          <td><%= bug.bug_status %></td>
          <td><%= link_to 'Show', user_project_bug_path(@user, @project, bug), class: 'btn btn-primary btn-sm' %></td>
          <td><%= link_to 'Edit', edit_user_project_bug_path(@user, @project, bug), class: 'btn btn-warning btn-sm' %></td>
          <td><%= link_to 'Destroy', user_project_bug_path(@user, @project, bug), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
