<div class="container">
  <h1 class="mt-4">Projects</h1>

  <% if current_user.role == 'manager' %>
    <%= link_to 'New Project', new_user_project_path(@user), class: 'btn btn-success my-3' %>
  <% end %>

  <table class="table table-bordered">
    <thead class="thead-dark">
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Technologies</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @projects.each do |project| %>
        <tr>
          <td><%= project.title %></td>
          <td><%= project.description %></td>
          <td><%= project.technologies %></td>
          <td><%= link_to 'Show', user_project_path(@user, project), class: 'btn btn-primary btn-sm' %></td>
          
          <% if current_user.role == 'manager' %>
            <td><%= link_to 'Edit', edit_user_project_path(@user, project), class: 'btn btn-warning btn-sm' %></td>
            <td><%= link_to 'Destroy', user_project_path(@user, project), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
