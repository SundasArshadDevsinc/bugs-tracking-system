<div class="container">
  <div class="row">
    <div class="col-md-8 mx-auto">
      <h1 class="mt-4"><%= @project.title %></h1>

      <div class="card mt-4">
        <div class="card-body">
          <h5 class="card-title">Description</h5>
          <p class="card-text"><%= @project.description %></p>
        </div>
      </div>

      <div class="card mt-4">
        <div class="card-body">
          <h5 class="card-title">Technologies</h5>
          <p class="card-text"><%= @project.technologies %></p>
        </div>
      </div>

      <h2 class="mt-4">Bugs</h2>

      <%= link_to 'New Bug', new_user_project_bug_path(@user, @project), class: 'btn btn-success mb-3' %>

      <% if @project.bugs.any? %>
        <table class="table table-bordered">
          <thead class="thead-dark">
            <tr>
              <th>Title</th>
              <th>Deadline</th>
              <th>Bug Type</th>
              <th>Bug Status</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @project.bugs.each do |bug| %>
              <tr>
                <td><%= bug.title %></td>
                <td><%= bug.deadline %></td>
                <td><%= bug.bug_type %></td>
                <td><%= bug.bug_status %></td>
                <td>
                  <div class="btn-group" role="group">
                    <%= link_to 'Show', user_project_bug_path(@user, @project, bug), class: 'btn btn-primary btn-sm' %>
                    <%= link_to 'Edit', edit_user_project_bug_path(@user, @project, bug), class: 'btn btn-warning btn-sm' %>
                    <%= link_to 'Delete', user_project_bug_path(@user, @project, bug), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <p>No bugs associated with this project.</p>
      <% end %>
    </div>
  </div>
</div>
